<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="border" prefHeight="165.0" prefWidth="324.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller.LibraryController">
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label alignment="CENTER" text="Login Window" textAlignment="CENTER">
                     <font>
                        <Font name="Calibri" size="36.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </Pane>
   </top>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Region prefHeight="10.0" prefWidth="200.0" />
                  <HBox spacing="5.0">
                     <children>
                        <Region prefWidth="10.0" />
                        <Label prefWidth="80.0" text="User Name: ">
                           <padding>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="txtUserName" prefWidth="200.0">
                           <padding>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                        </TextField>
                     </children>
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Region prefWidth="10.0" />
                        <Label prefWidth="80.0" text="Password: " />
                        <PasswordField fx:id="txtPassword" prefHeight="25.0" prefWidth="200.0" />
                     </children>
                     <VBox.margin>
                        <Insets right="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Region prefWidth="200.0" />
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#loginClicked" prefWidth="100.0" text="Login" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#cancelClicked" prefWidth="100.0" text="Cancel" />
         </children>
         <padding>
            <Insets right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
